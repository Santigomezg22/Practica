package practica4;
import java.util.Scanner;
/**
 *
 * @author labcca
 */
public class Practica4 {
    public static void main(String[] args) {
     
        Scanner dinero = new Scanner(System.in);
        
        System.out.println("Ingrese la cantidad en pesos ");
        int pesos = dinero.nextInt();
        
        double dolar = pesos/17;
        double euros = pesos/18;
        
        System.out.println("La cantidad de dolares es " + dolar);
        System.out.println("La cantidad en euros es " + euros);
        
        dinero.close();
               
    }
    
}
